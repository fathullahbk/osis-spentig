generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

// Tabel Masa Jabatan
model Term {
  id        Int       @id @default(autoincrement())
  year      String    // Contoh: "2024/2025"
  isActive  Boolean   @default(false)
  finances  Finance[]
  profiles  Profile[]
  programs  Program[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
}

// Tabel Profil Jabatan
model Profile {
  id        Int      @id @default(autoincrement())
  name      String   // Nama Siswa
  role      String   // Jabatan (Ketua, Wakil, dsb)
  vision    String?  // Visi misi atau deskripsi
  imageUrl  String?  // Link gambar dari Uploadthing
  termId    Int
  term      Term     @relation(fields: [termId], references: [id])
  programs  Program[] @relation("ProgramLeader")
}

// Tabel Program Kerja
model Program {
  id          Int      @id @default(autoincrement())
  title       String   // Nama Proker
  description String   @db.Text
  status      String   // "Terlaksana", "Belum Terlaksana", "Sedang Berjalan"
  termId      Int
  term        Term     @relation(fields: [termId], references: [id])
  leaderId    Int?     // Bisa kosong (optional) jika PJ belum ditentukan
  leader      Profile? @relation("ProgramLeader", fields: [leaderId], references: [id])
}

// prisma/schema.prisma

model Finance {
  id          Int      @id @default(autoincrement())
  date        DateTime // Tanggal transaksi
  description String   // Keterangan (contoh: "Iuran Kas", "Beli Spidol")
  type        String   // "PEMASUKAN" atau "PENGELUARAN"
  amount      Int      // Jumlah uang
  termId      Int      // Relasi ke masa bakti
  term        Term     @relation(fields: [termId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}